---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Contacts from "../components/Contacts.astro";
import Header from "../components/Header.astro";
interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<Header description={description} image={image} />
		<slot />
		<Contacts />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--pr-clr: blue;
		--sc-clr: darkblue;
		--dk-clr: dimgray;
		--max-wd: 1089px;

		--fs-h1: 2rem;
		--fs-h2: 1.4rem;
		--fs-h3: 1.1rem;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		transition: all 0.32s linear;
	}

	html {
		font-family: Monaco, Verdana, Geneva, Tahoma, sans-serif, system-ui, sans-serif;
		font-size: 13px;
	}

	body {
		line-height: 1.5;
	}

	main {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	a,
	button {
		text-decoration: none;
		text-transform: capitalize;
		cursor: pointer;
		color: inherit;
		font-weight: 300;
	}

	a:hover {
		color: var(--pr-clr);
	}

	h1 {
		font-size: var(--fs-h1);
	}

	h2 {
		font-size: var(--fs-h2);
	}

	h3 {
		font-size: var(--fs-h3);
	}

	input {
		width: 100%;
		height: 36px;
	}

	.btn {
		padding: 0.8em;
		text-align: center;
		border: 1px solid #333;
		background: transparent;
		color: white;
	}

	.btn:hover {
		background: var(--sc-clr);
		color: white;
	}

	.container {
		max-width: var(--max-wd);
		padding: 1rem;
		margin: 2rem auto;
	}

	.tx-cn {
		text-align: center;
	}

	@media (min-width: 768px) {
	}
</style>
