---
import { Image } from "astro:assets";
import myImage from "../assets/point.jpg";
---

<main>
    <h1 class="tx-cn">Contact</h1>
    <p class="tx-cn">
        Vous cherchez à monter un projet, développer ou assurer le suivi de
        votre entreprise, contactez-nous !
    </p>

    <Image
        src={myImage}
        width="180"
        height="180"
        decoding="async"
        loading="lazy"
        alt="A description of my image."
    />

    <form action="">
        <p>
            <strong>Contacter nous :</strong><br />
             +237 696 560 588 <br />
             +237 677 316 329 <br />
             ntibusinessconsulting@gmail.com
        </p>
        <input type="text" name="name" placeholder="Name" required />
        <input type="text" name="contact" placeholder="Email / Tel" required />
        <textarea
            name="message"
            cols="3"
            rows="3"
            placeholder="Message"
            required></textarea>
        <button class="btn"> Envoyer</button>
    </form>
</main>

<style>
    main {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        align-items: flex-start;
        padding: 3rem 1rem;
        gap: 2rem;
        background: rgb(26, 19, 32);
        color: white;
    }

    form {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    textarea,
    input {
        padding: 10px;
    }

    h1,
    input,
    textarea,
    form,
    div,
    p {
        width: 100%;
    }

    @media (min-width: 768px) {
        input {
            width: calc(50% - 1rem);
        }

        form {
            width: 68%;
        }

        div {
            width: 30%;
        }
    }
</style>
