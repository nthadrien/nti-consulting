---
import { Image } from "astro:assets";
const { info } = Astro.props;
---

<div>
    <Image
        src={info.image}
        class="img"
        decoding="async"
        loading="lazy"
        alt="A description of my image."
    />
    <h4>{info.name}</h4>
    <p style="color: #605959;">{info.role}</p>
    <p>{info.description || "Phasellus eget enim eu lectus faucibus vestibulum. Suspendisse sodales pellentesque elementum."}</p>

    <a href="#contacts">Contact</a>
</div>

<style>
    div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        max-width: 270px;
        align-items: flex-start;
        font-size: smaller;
        gap: 0.8rem;
        height: 360px;
    }

    .img {
        width: 100%;
        height: 180px;
    }

    a {
        padding: 0.4rem;
        width: 100%;
        background: #ddd;
        text-align: center;
    }
    
    a:hover {
        background: black;
        color: white;
    }
</style>
