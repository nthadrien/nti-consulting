---
import Logo from "./Logo.astro";
---

<nav>
    <Logo />

    <div>
        <a href="/">accueil</a>
        <a href="/#contacts">contacts</a>
        <a href="/about">a propos de nous</a>
    </div>

    <label>
        <input type="checkbox" name="nav-toggle" />
    </label>
</nav>

<style>
    nav {
        display: grid;
        grid-template-columns: repeat( 2, minmax( 120px, 540px));
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 1rem;
        position: fixed;
        top: 0;
        background: white;
        color: inherit;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        height: fit-content;
        z-index: 3;
    }

    input {
        display: inline;
        border: none;
        outline: none;
        appearance: none;
        -webkit-appearance: none;
        background: var(--bk-clr, rgb(69, 62, 62));
    }
    :checked {
        background: red;
    }

    div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 3;
        height: 100vh;
        width: 100%;
        background: inherit;
        transform: translateY(-100vh);
        transition: all 0.4s ease-out;
    }

    label {
        justify-self: end;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        height: 40px;
        width: 40px;
        z-index: 4;
    }

    label::after,
    label::before,
    input {
        content: ".";
        width: 32px;
        height: 4px;
        background: var(--bk-clr, rgb(61, 11, 11));
        border-radius: 5px;
        margin: 0 auto;
    }

    nav:has(input:checked) div {
        transform: translateY(0vh);
    }

    label:has(input:checked)::after {
        rotate: -45deg;
    }

    label:has(input:checked)::before {
        rotate: -45deg;
        background: rebeccapurple;
    }

    @media (min-width: 640px) {

        label {
            display: none;
        }

        div {
            flex-direction: row;
            justify-content: flex-end;
            transform: translateY(0vh);
            position: static;
            height: fit-content;
            width: 100%;
        }
    }
</style>
