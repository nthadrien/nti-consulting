---
interface Props {
    image?: string;
    description?: string;
}

const { image , description} = Astro.props;
---

<header>
    
    <h3>
        {description}
    </h3>
    <button class="btn">Contactez Nous</button>
</header>

<style>
    header {
        width: 100%;
        min-height: 450px;
        height: 90vh;
        background: url("../assets/frog.webp") rgba(19, 1, 43, 0.74) no-repeat fixed center;
        background-size: cover;
        background-blend-mode: darken;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.6em;
    }
</style>
