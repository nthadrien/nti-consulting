---
interface Props {
    image?: string;
    description?: string;
}

const { image , description} = Astro.props;
---

<header>
    
    <section>
        <h3>
            {description}
        </h3>
        <button class="btn">Contactez Nous</button>
    </section>
</header>

<style>
    header {
        width: 100%;
        min-height: 450px;
        height: 90vh;
        background: url("../assets/frog.webp") rgba(19, 1, 43, 0.74) no-repeat fixed center;
        background-size: cover;
        background-blend-mode: darken;
        color: white;
        display: grid;
        place-content: center;
        padding: 1rem;
    }

    section {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        gap: 2rem;
        max-width: 760px;
    }
</style>
